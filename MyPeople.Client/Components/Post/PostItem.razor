@using MyPeople.Services.Posts.Application.Dtos

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Post.UserDisplayName</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body1">@Post.Content</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter, EditorRequired]
    public PostDto Post { get; set; } = default!;
}
