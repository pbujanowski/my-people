@using MyPeople.Common.Abstractions.Services;
@using MyPeople.Common.Models.Dtos;

@inject IPostService PostService
@inject AuthenticationStateProvider AuthenticationStateProvider

<MudStack>

    @foreach (var post in Posts)
    {
        <PostItem Post="post" CurrentUserId="@GetCurrentUserId()"
            OnPostEdit="() => GetAllPostsAsync()" OnPostRemove="() => GetAllPostsAsync()" />
    }

</MudStack>

@code {
    [Parameter, EditorRequired]
    public IEnumerable<PostDto> Posts { get; set; } = default!;

    private Guid GetCurrentUserId() =>
        Guid.Parse(AuthenticationStateProvider.GetAuthenticationStateAsync().Result.User.FindFirst("sub")?.Value
            ?? Guid.Empty.ToString());

    private async Task GetAllPostsAsync()
    {
        Posts = await PostService.GetAllPostsAsync();
    }
}
