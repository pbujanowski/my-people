<AuthorizeView>
    <Authorized>
        <MudIconButton
            Icon="@Icons.Material.Filled.Person"
            Title="@context.User.Identity?.Name"
            Color="Color.Inherit"/>
        <MudIconButton
            Icon="@Icons.Material.Filled.Logout"
            Title="Log out"
            Match="NavLinkMatch.All"
            Color="Color.Inherit"
            OnClick="BeginLogOut"/>
    </Authorized>
    <NotAuthorized>
        <MudIconButton
            Icon="@Icons.Material.Filled.Login"
            Title="Log in"
            Match="NavLinkMatch.All"
            Color="Color.Inherit"
            Href="/authentication/login"/>
    </NotAuthorized>
</AuthorizeView>